<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:Fränder"
            x:Class="Fränder.MainTabbedPage">

    <!-- Första fliken: MainPage med NavigationPage -->
    <NavigationPage Title="Hem">
        <x:Arguments>
            <views:MainPage />
        </x:Arguments>
    </NavigationPage>
    <!-- Andra fliken: Mat -->
    <ContentPage Title="Mat">
        <StackLayout Padding="20">
            <Label Text="Mat" FontSize="24" HorizontalOptions="Center"/>
            <Button Text="Mata Fränd" Clicked="FeedFrand"/>
        </StackLayout>
    </ContentPage>

    <!-- Tredje fliken: Sömn -->
    <ContentPage Title="Sömn">
        <StackLayout Padding="20">
            <Label Text="Sömn" FontSize="24" HorizontalOptions="Center"/>
            <Button Text="Låt Fränd sova" Clicked="SleepFrand"/>
        </StackLayout>
    </ContentPage>

</TabbedPage>
